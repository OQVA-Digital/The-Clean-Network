---
const { title, description, keywords, metaTitle, metaDescription, metaKeywords } = Astro.props;

import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import BodyGTM from "../components/BodyGTM.astro";

import "../styles/subpages.css";

import { SITE_TITLE, SITE_DESCRIPTION, SITE_KEYWORDS } from "../consts";
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <BaseHead
        title={metaTitle ? metaTitle : SITE_TITLE}
        description={metaDescription ? metaDescription : SITE_DESCRIPTION}
        keywords={metaKeywords ? metaKeywords : SITE_KEYWORDS} />
    </head>
    <body>
        <BodyGTM/>
        <Header />
        
        <main>
            <slot />
        </main>

        <Footer />
    </body>
</html>
