---
const { title, description, keywords, metaTitle, metaDescription, metaKeywords } = Astro.props;

import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

import "../styles/subpages.css";

import { SITE_TITLE, SITE_DESCRIPTION, SITE_KEYWORDS } from "../consts";
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <BaseHead
        title={title ? title : SITE_TITLE}
        description={description ? description : SITE_DESCRIPTION}
        keywords={keywords ? keywords : SITE_KEYWORDS} />
    </head>
    <body>
        <Header />
        <slot />
        <Footer />
    </body>
</html>
