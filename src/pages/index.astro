        Made by 
        <picture loading="lazy">
            <source srcset="/logo/logo.webp" type="image/webp" width="96" height="30">
            <source srcset="/logo/logo.png" type="image/png" width="96" height="30">
            <img src="/logo/logo.png" alt="Logo" draggable="false" width="96" height="30">
        </picture>
    </footer>

    <ContactForm/>
</Layout>


<style>
	body {
		font-family: 'Tablon', sans-serif;
		overflow-x: hidden;
	}

	body .logo {
		margin: 0 auto;
		display: block;
		width: clamp(12rem, 60vw, 14rem);
		object-fit: contain;
	}

	h1 {
		text-transform: uppercase;
		font-weight: 600;
		width: var(--width2);
		margin: 0 auto;
		font-size: clamp(1.1rem, 5.7vmin, 2.4rem);
		letter-spacing: 0.1rem;
	}

	footer {
		background-color: var(--light);
		color: var(--dark);
		font-weight: 600;
		display: flex;
		justify-content: center;
		gap: 0.9rem;
		padding: 1rem 0;
		align-items: center;
		letter-spacing: 3px;
	}

	footer picture {
		width: 6rem;
	}



	@media (min-width:700px) {

		.logo {
			margin: 0;
		}

		h1 {
			margin: 0;
			max-width: 50rem;
		}

		footer {
			padding: 0.5rem 0;
		}
	}

</style>