---
import { getCollection } from "astro:content";
const services = await getCollection("services");
---

<div class="stripe">
    <div class="announcement">ANNOUNCEMENT OR OFFER</div>

    <div class="ctnr">
        <a href="#">London: 020 3411 0275</a>
        <a href="#">Birmingham: 0121 3927529</a>
    </div>
</div>

<header>
    <div class="ctnr">
        <a href="/index.html" class="logo_anchor">
            <img src="/tcn-logo-default.svg" alt="The Clean Network logo" />
        </a>

        <nav>
            <div class="ctnr">
                <a href="/index.html">Home</a>

                <div class="subnav">
                    <div class="flex">
                        <a href="/services/">Services</a>

                        <button
                            class="expand icon"
                            type="button"
                            aria-label="Expand navigation"
                        >
                            <span></span>
                        </button>
                    </div>

                    <div class="subsets">
                        <div>
                            <a href="#" class="heading indoor icon"
                                >Indoor Cleaning</a
                            >

                            <hr />

                            {
                                services.map((services) => (
                                    <>
                                        {services.data.type === "indoor" ? (
                                            <a
                                                href={`/services/${services.slug}/`}
                                            >
                                                {services.data.title}
                                            </a>
                                        ) : null}
                                    </>
                                ))
                            }
                        </div>

                        <hr />

                        <div>
                            <a href="#" class="heading outdoor icon"
                                >External Cleaning</a
                            >

                            <hr />

                            {
                                services.map((services) => (
                                    <>
                                        {services.data.type === "external" ? (
                                            <a
                                                href={`/services/${services.slug}/`}
                                            >
                                                {services.data.title}
                                            </a>
                                        ) : null}
                                    </>
                                ))
                            }
                        </div>
                    </div>
                </div>

                <div class="subnav">
                    <div class="flex">
                        <a href="">Sectors</a>

                        <button
                            class="expand icon"
                            type="button"
                            aria-label="Expand navigation"
                        >
                            <span></span>
                        </button>
                    </div>

                    <div class="subsets">
                        <div>
                            <!-- <a href="#" class="heading sectors icon">Sectors</a>

                            <hr /> -->

                            <a href="#">Corporate Office Buildings</a>
                            <a href="#">Small Offices</a>
                            <a href="#">Medical & Dental</a>
                            <a href="#">Architects Firms</a>
                            <a href="#">Media & Design Agencies</a>
                            <a href="#">Law Firms</a>
                            <a href="#">Technology Companies</a>
                            <a href="#">Financial Service Companies</a>
                        </div>
                    </div>
                </div>

                <a href="">Locations</a>

                <div class="subnav">
                    <div class="flex">
                        <a href="">About</a>

                        <button
                            class="expand icon"
                            type="button"
                            aria-label="Expand navigation"
                        >
                            <span></span>
                        </button>
                    </div>

                    <div class="subsets">
                        <div>
                            <a href="#" class="heading about icon">About Us</a>
                            <a href="#" class="heading rates icon">Rates</a>
                        </div>
                    </div>
                </div>

                <a href="">Contact</a>

                <a href="#" class="cta">Get a Free Quote</a>
            </div>
        </nav>

        <button class="hambt" type="button" aria-label="Open navigation menu">
            <span></span>
            <span></span>
            <span></span>
        </button>
    </div>
</header>

<style>
    .stripe {
        background-color: var(--primary-a);
        text-align: center;
        color: var(--light);
        text-transform: uppercase;
        letter-spacing: 0.1rem;
        font-size: 1.1rem;
        position: relative;
    }

    .stripe .announcement {
        position: absolute;
        left: 0;
        height: 100%;
        padding: 0 clamp(2rem, calc(8vw - 7rem), 4rem);
        display: none;
        background-color: var(--highlight);
        align-items: center;
        min-width: 19%;
        text-align: center;
        justify-content: center;
    }

    .stripe > .ctnr {
        height: 2.5rem;
        width: var(--mobile-width);
        margin-inline: auto;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: clamp(0rem, calc(9vw - 7rem), 3rem);
    }

    header {
        background-color: var(--primary);
        position: sticky;
        top: 0;
        left: 0;
        right: 0;
        height: clamp(1rem, 16vmin, 7.5rem);
        z-index: 4;
        background-image: linear-gradient(0deg, var(--primary-b) 0%, transparent 38% );
        border-bottom: 0.2rem solid var(--primary);
        /* padding-top: 0.2rem; */
    }

    header > .ctnr {
        width: var(--mobile-width);
        margin-inline: auto;
        display: flex;
        height: 100%;
        justify-content: space-between;
        align-items: center;
    }

    header .logo_anchor {
        width: clamp(1rem, 30vmin, 15rem);
        display: block;
    }

    header nav.show {
        opacity: 1;
        visibility: visible;
    }

    .hambt {
        width: 3rem;
        height: 2.5rem;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: stretch;
    }

    .hambt span {
        height: 0.4rem;
        background-color: var(--light);
        border-radius: 0.2rem;
        transition: opacity 0.25s ease-out, transform 0.25s ease-out;
    }

    .hambt.close {
    }

    .hambt.close span:nth-child(1) {
        transform: translateY(1.1rem) rotate(45deg);
    }

    .hambt.close span:nth-child(2) {
        transform: rotate(-45deg);
    }

    .hambt.close span:nth-child(3) {
        opacity: 0;
        transform: translateY(-220%);
    }

    header nav {
        box-shadow: -1rem 2rem 3rem -1rem rgb(102 102 102 / 40%);
        width: calc(100% - (100% - var(--mobile-width)) / 2);
        background-color: rgb(255 255 255 / 80%);
        font-size: clamp(1.6rem, 5vw, 2.2rem);
        backdrop-filter: blur(0.8rem);
        border-radius: 0 0 0 1.4rem;
        transform: translateY(100%);
        padding: 2rem 3rem 2rem 0;
        color: var(--primary-a);
        box-sizing: border-box;
        position: absolute;
        visibility: hidden;
        overflow-y: scroll;
        font-weight: 600;
        max-height: 62vh;
        bottom: -0.2rem;
        overflow: auto;
        opacity: 0;
        right: 0;
    }

    header nav .cta {
        padding: clamp(0.8rem,3vmin,1.2rem) 1.5rem;
        background-color: var(--highlight);
        font-size: clamp(1.8rem,1vw,2rem);
        font-weight: 500;
        border-radius: 0.6rem;
        height: min-content;
        color: var(--light);
        position: sticky;
        bottom: 0;
        margin: 6rem 0 2rem;
        text-align: center;
    }

    header nav > .ctnr {
        display: flex;
        flex-direction: column;
        justify-content: right;
        align-items: end;
        margin-inline: auto;
        text-align: right;
    }

    header nav a {
        padding: 0 0.6rem;
        display: flex;
        align-items: center;
    }

    header nav > .ctnr > a:not(.cta),
    .subnav > .flex > a:not(.cta) {
        border-radius: 0.3rem;
        height: 4.3rem;
    }

    .subsets {
        padding: 1.5rem 0rem 2.5rem 3rem;
        font-size: 0.9em;
        font-weight: 500;
        display: none;
        flex-direction: column;
        gap: clamp(2rem, 2vw, 4rem);
        margin: 0rem 0 3rem;
        background-image: linear-gradient(40deg, var(--light), transparent 80%);
        background-attachment: fixed;
        border-radius: 0.9rem;
    }

    .subsets > div a {
        padding: 0.6rem;
        white-space: nowrap;
        display: block;
        width: 100%;
    }

    header nav .subnav {
        display: flex;
        flex-direction: column;
        align-items: end;
        position: relative;
        height: 100%;
        justify-content: center;
    }

    .subsets > hr {
        margin: 0;
        background-color: var(--light-a);
        flex: 1;
        border: 0.05rem solid var(--light-a);
    }

    .subsets.visible {
        display: flex;
    }

    .subsets > div {
        display: flex;
        flex-direction: column;
        align-items: end;
    }

    .subsets .heading {
        font-weight: 600;
        position: relative;
        width: fit-content;
        display: flex;
        align-items: center;
        gap: 0.6rem;
    }

    .subsets .heading.icon::after {
        content: "";
        position: relative;
        width: 1.3rem;
        height: 1.3rem;
        background-size: contain;
        background-position: center;
        background-repeat: no-repeat;
        display: block;
    }

    .subsets .icon.indoor::after {
        background-image: url("/icons/indoor.svg");
    }

    .subsets .icon.outdoor::after {
        background-image: url("/icons/outdoor.svg");
    }

    .subsets .icon.sectors::after {
        background-image: url("/icons/sectors.svg");
    }

    .subsets .icon.about::after {
        background-image: url("/icons/question.svg");
    }

    .subsets .icon.rates::after {
        background-image: url("/icons/star.svg");
    }

    .subnav > .flex {
        align-items: center;
    }

    .subnav .expand {
        color: var(--light);
        padding-right: 0.6rem;
        line-height: 1;
        width: 3rem;
        height: 3.6rem;
        display: flex;
        justify-content: center;
        align-items: center;
        margin-right: -0.6rem;
    }

    .subnav .expand span {
        display: block;
        border-bottom: 0.5rem solid var(--highlight);
        border-right: 0.5rem solid var(--highlight);
        border-top: 0.5rem solid transparent;
        border-left: 0.5rem solid transparent;
        transform: translate(50%, 0%) rotate(135deg);
    }

    .subnav .expand span.active {
        transform: translate(0%, -50%) rotate(45deg);
    }

    .subsets > div hr {
        width: 2rem;
        margin: 1rem;
        height: 0.1rem;
        background-color: var(--primary-c);
    }

    @media screen and (min-width: 900px) {
        .subnav .expand,
        .hambt {
            display: none;
        }

        .stripe .announcement {
            display: flex;
        }

        .stripe > .ctnr {
            justify-content: right;
        }

        header nav {
            position: relative;
            transform: unset;
            overflow: unset;
            background-color: transparent;
            color: var(--light);
            font-weight: 400;
            flex: 1;
            padding: 0;
            height: 100%;
            opacity: 1;
            visibility: visible;
            backdrop-filter: unset;
            font-size: 1.8rem;
            box-shadow: unset;
        }

        header nav a {
            display: flex;
            align-items: center;
            box-sizing: border-box;
            height: unset;
        }

        /* Main header anchors */

        header nav > .ctnr > a:not(.cta),
        .subnav > .flex > a:not(.cta) {
            transition: background-color 0.3s ease;
            padding: 0.8rem clamp(0.6rem, 0.8vw, 1.6rem);
        }

        header nav > .ctnr > a:not(.cta):hover,
        .subnav:hover > .flex > a:not(.cta) {
            transition: background-color 0.1s ease;
            background-color: var(--primary-b);
        }

        header nav .cta {
            position: static;
            margin: unset;
            margin-left: clamp(0rem, calc(8vw - 9rem), 6rem);
            border: 0.2rem solid var(--primary-c);
        }

        header nav > .ctnr {
            flex-direction: row;
            text-align: unset;
            justify-content: right;
            width: unset;
            gap: clamp(0rem,calc(6vw - 6rem),4rem);
            align-items: center;
            height: 100%;
        }

        header nav .subnav {
            align-items: center;
        }

        .subsets {
            background-color: var(--light);
            padding: 3rem 4rem;
            border-radius: 0.8rem;
            position: absolute;
            color: var(--primary-a);
            flex-direction: row;
            bottom: 0;
            margin: 0;
            transform: translate(0%, calc(100% - 2rem));
            box-shadow: 0 1rem 3rem -1rem rgb(248 248 255 / 40%);
            display: flex;
            transition: opacity 0.3s 0.2s ease, visibility 0.3s 0.2s ease,
                transform 0.3s 0.2s ease;
            opacity: 0;
            visibility: hidden;
        }

        .subsets::before {
            content: "";
            position: absolute;
            top: -1rem;
            left: 0;
            right: 0;
            margin-inline: auto;
            border-top: 0.7rem solid var(--light);
            border-right: 0.7rem solid var(--light);
            border-bottom: 0.7rem solid transparent;
            border-left: 0.7rem solid transparent;
            width: 0;
            height: 0;
            transform: translateY(0.5rem) rotate(-45deg);
        }

        .subsets > div a {
            transition: background-color 0.3s ease;
        }

        .subsets > div a:hover {
            background-color: var(--light-d);
            transition: background-color 0.1s ease;
        }

        .subnav:hover .subsets {
            transition: opacity 0.2s ease, visibility 0.2s ease,
                transform 0.2s ease;
            opacity: 1;
            visibility: visible;
            z-index: 2;
            transform: translate(0%, calc(100% - 1rem));
        }

        .subsets > div {
            align-items: start;
        }
    }
</style>

<script>
    const menuBt = document.querySelector(".hambt");
    const nav = document.querySelector("header nav");
    const navBts = document.querySelectorAll("header nav a");

    let showingMenu = false;

    function toggleNav() {
        if (showingMenu == false) {
            nav.classList.add("show");
            menuBt.classList.add("close");

            showingMenu = true;
        } else {
            nav.classList.remove("show");
            menuBt.classList.remove("close");

            showingMenu = false;
        }
    }

    menuBt.addEventListener("click", toggleNav);

    for (let i = 0; i < navBts.length; i++) {
        navBts[i].addEventListener("click", toggleNav);
    }

    window.addEventListener("scroll", function (e) {
        if (showingMenu == true) {
            toggleNav();
        }
    });

    const expandBts = document.querySelectorAll("header nav .expand");

    for (let i = 0; i < expandBts.length; i++) {
        expandBts[i].addEventListener("click", (e) => {
            const target = e.currentTarget as HTMLElement;
            target.parentElement.parentElement
                .querySelector(".subsets")
                .classList.toggle("visible");

            target.querySelector("span").classList.toggle("active");
        });
    }
</script>
