export interface Props {
    title: string;
    description?: string;
}

import "../styles/global.css";

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const { title, description } = Astro.props;

import { SITE_TITLE, SITE_DESCRIPTION, OG_IMAGE } from "../consts";
