---
import { TEL, TEL_HREF, EMAIL } from "../consts";
---
					

<div class="contact_box">
    <a href=`mailto:${EMAIL}` class="email">
        <span class="icon"></span>
        {EMAIL}
    </a>
    
    <a href={`tel:${TEL_HREF}`} class="tel">
        <span class="icon"></span>
        London: {TEL}
    </a>
    
